<% unless user_signed_in? %> 
   <h1>Welcome to ShareBox</h1> 
   <p>File sharing web application you can't ignore.</p> 

<%else%>
  <br>
  <div id="menu">
  <ul id= "top_menu">
  <li>
  <%= link_to 'New Conversation', new_message_path %>
  </li>
  </ul>
  </div>
  <div class="breadcrumbs">
    <%= link_to 'Home', root_url %>
  </div>
  <br>
  <% @user.each do |u| %>
  <div class="asset_details folder">
    <b><div class="file_name"><%= link_to u, send_message_path(@h[u]["id"]) %></div></b>
    <td><%= @h[u]["message"] %></td>
    </div>
    <% end %>
  <br>
<% end %>